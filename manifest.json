{
  "manifest_version": 2,
  "name": "DAO Badges for Twitter",
  "version": "1.0",
  "description": "Add badges to Twitter profiles",
  "icons": {
    "48": "MainMONKE2.jpg",
    "128": "MainMONKE2.jpg" 
  },
  "permissions": [
    "activeTab",
    "https://twitter.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "MainMONKE2.jpg",
    "default_popup": "popup.html" 
  }
}