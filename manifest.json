{
    "manifest_version": 2,
    "name": "Twitter Timeline Modifier",
    "version": "1.0",
    "description": "Adds icons under profile photos on Twitter.",
    "permissions": ["activeTab"],
    "content_scripts": [
      {
        "matches": ["https://twitter.com/*"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "48": "icon.png"
    },
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    }
  }
  